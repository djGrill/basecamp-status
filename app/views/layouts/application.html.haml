!!!
%html
  %head
    %title Basecamp Status
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
    %script{:type => "text/javascript", :src => "http://use.typekit.com/dju8kxh.js"}
    %script{:type => "text/javascript"} try{Typekit.load();}catch(e){}
    %link{:href=>"/images/favicon.png", :rel =>"Shortcut Icon"}

  %body.one-col
    #wrapper
      #header
        #logo
          %img{:src => '/images/angelmanagement_logo_gray.png'}
        #title
          %h1 Basecamp Status<br />
          %h3= "Rendered at #{@time}"
      #container
        #assigned
          %h3 Assigned to:
          =select_tag(:names, options_for_select([['Show All', 0]]))
        %br
        #content
          %table#todoTable{:border => "1"}
            %th Venue
            %th Project Name
            %th Event Date
            %th To-Do List
            %th To-Do Item
            %th Due Date
            %th Assigned To
          = yield
