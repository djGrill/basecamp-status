- unless @p.nil?
  - @p.each do |project|
    .project
      %span.project-name
        = project.name 
      - @b.get_todos(project).each do |todo|
        .todo-list
          = todo.name
          %ul.items
            - todo.todo_items.each do |i|
              %li.item              
                = i.content
                %span.assigned-due
                  = i.responsible_party_name if i.respond_to?(:responsible_party_name)
                  = i.due_at.strftime("%d %b %Y") unless i.due_at.nil?
